<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rpfm.cursoandroid.coml.rpfm.MainActivity$PlaceholderFragment"
    android:background="#e5e6ea">

    <ImageView
        android:layout_width="420dp"
        android:layout_height="280dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/btnExecutarId"
        android:layout_below="@+id/seekBarVolumeId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar

        android:layout_width="420dp"
        android:layout_height="30dp"
        android:id="@+id/seekBarVolumeId"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="false"
        android:layout_alignParentEnd="false"
        android:max="10"
        android:progress="4"
        android:indeterminateOnly="false" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:id="@+id/imgStreamId"
        android:layout_alignBottom="@+id/btnExecutarId"
        android:layout_toRightOf="@+id/btnExecutarId"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/seekBarVolumeId"
        android:layout_alignEnd="@+id/seekBarVolumeId" />

</RelativeLayout>
